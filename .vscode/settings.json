{
  "editor.formatOnSave": false,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,
  "editor.trimAutoWhitespace": true,
  "prettier.configPath": ".prettierrc",
  "prettier.requireConfig": true,
  "chat.mcp.discovery.enabled": {
    "claude-desktop": false,
    "windsurf": false,
    "cursor-global": false,
    "cursor-workspace": false
  },
  // Copilot Chat Settings
  "github.copilot.chat.localeOverride": "en",
  "github.copilot.chat.commitMessageGeneration.instructions": [
    {
      "file": ".github/guidelines/commit-convention.md"
    }
  ],
  "chat.agent.thinkingStyle": "fixedScrolling",
  "chat.editRequests": "inline",
  "chat.sendElementsToChat.enabled": true,
  "github.copilot.chat.edits.suggestRelatedFilesFromGitHistory": true,
  "github.copilot.chat.reviewSelection.enabled": true,
  "chat.customAgentInSubagent.enabled": true,
  "github.copilot.chat.cli.customAgents.enabled": true,
  // Agent & Tools
  "chat.agent.enabled": true,
  "chat.useAgentsMdFile": true,
  "chat.useAgentSkills": true,
  "chat.viewSessions.enabled": true,
  // Instructions, Prompts & Agents file locations
  "chat.instructionsFilesLocations": {
    ".github/instructions": true
  },
  "chat.promptFilesLocations": {
    ".github/prompts": true
  },
  "chat.agentFilesLocations": {
    ".github/agents": true
  },
  // Code Generation & Review
  "github.copilot.chat.codeGeneration.useInstructionFiles": true,
  "github.copilot.chat.reviewSelection.instructions": [
    {
      "file": ".github/instructions/angular.instructions.md"
    },
    {
      "file": ".github/instructions/typescript.instructions.md"
    }
  ]
}
